with Ada.Containers.Doubly_Linked_Lists;

generic
  type Element is private;
  type Elements is array (Positive range <>) of Element;
  with package Container is new Ada.Containers.Doubly_Linked_Lists(Element);
package Doubly_Linked_Lists_Extension is

  function Elements_Of (The_List : Container.List) return Elements;

  function List_Of (The_Elements : Elements) return Container.List;

end Doubly_Linked_Lists_Extension;
