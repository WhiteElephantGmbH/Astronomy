pragma Style_White_Elephant;

pragma Build (Description => "GID test",
              Version     => (1, 0, 0, 0),
              Kind        => Console,
              Icon        => False,
              Compiler    => "GNATPRO\23.0");

with Ada.Text_IO;
with Raw;
with Exceptions;

procedure Raw_Test is
begin
  Ada.Text_IO.Put_Line ("Raw Test");
  Ada.Text_IO.Put_Line ("========");
  declare
    Green_Grid : constant Raw.Green_Grid := Raw.Grid_Of ("First_Picture.CR2", 20);
  begin
    Ada.Text_IO.Put_Line ("Green Grid(1, 1) =" & Green_Grid'image);
  end;
exception
when Item: others =>
  Ada.Text_IO.Put_Line (Exceptions.Information_Of (Item));
end Raw_Test;
